<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GesturesPractice">

    <com.example.testactivity.CustomScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draggable Items"
                android:textSize="18sp"
                android:layout_margin="8dp"/>

            <!-- Draggable Items -->
            <View
                android:id="@+id/draggableBox1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag Me"
                android:layout_margin="8dp"/>

            <View
                android:id="@+id/draggableBox2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_green_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag Me"
                android:layout_margin="8dp"/>

            <View
                android:id="@+id/draggableBox3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_red_light"/>

            <!-- Additional content for vertical scrolling -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Content for Scrolling"
                android:textSize="18sp"
                android:layout_margin="8dp"/>

            <!-- Add more views to ensure content for vertical scrolling -->
            <!-- Repeat the block of code below to create 100+ items -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_purple"/>

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_light"/>

            <!-- Add more views to ensure content for vertical scrolling -->
            <!-- Repeat the block of code below to create 100+ items -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_dark"/>

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_green_dark"/>

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_red_dark"/>

            <!-- Repeat up to 100 items -->
        </LinearLayout>
    </com.example.testactivity.CustomScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
